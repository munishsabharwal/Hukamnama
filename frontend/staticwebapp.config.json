{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/assets/*",
      "/api/*"
    ]
  },
  "auth": {
    "rolesSource": "/api/getRoles",
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "externalid": {
          "registration": {
            "clientIdSettingName": "EXTERNALID_CLIENT_ID",
            "clientCredential": {
              "clientSecretSettingName": "EXTERNALID_CLIENT_SECRET"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://<your-ext-tenant-domain>/<tenant-id>/<USER_FLOW_NAME>/v2.0/.well-known/openid-configuration"
            }
          },
          "login": {
            "scopes": [
              "openid",
              "profile",
              "email"
            ],
            "loginParameterNames": []
          }
        }
      }
    }
  },
  "routes": [
    {
      "route": "/admin",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/editor",
      "allowedRoles": [
        "editor",
        "admin"
      ]
    },
    {
      "route": "/api/admin/*",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/hukams/*",
      "allowedRoles": [
        "authenticated"
      ]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/externalid?post_login_redirect_uri=/",
      "statusCode": 302
    }
  }
}